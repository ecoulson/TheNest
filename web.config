<configuration>
     <system.webServer>
			<handlers>
				<!-- indicates that the app.js file is a node.js application to be handled by the iisnode module -->
				<add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
			</handlers>
			<defaultDocument enabled="true">
				<files>
					<add value="index.html" />
				</files>
			</defaultDocument>
     </system.webServer>
</configuration>